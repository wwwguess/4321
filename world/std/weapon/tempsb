// sword.c

#include <weapon.h>

inherit EQUIP;

varargs void init_sword(int damage, int flag)
{
	set("weapon_prop/damage", damage);
	set("flag", (int)flag | EDGED);
}

void setup()
{
	set("skill_type", "sword");
	if( !query("actions") ) {
		set("actions", (: WEAPON_D, "query_action" :) );
		set("verbs", ({ "slash", "slice", "thrust" }) );
	}
	::setup();
}
